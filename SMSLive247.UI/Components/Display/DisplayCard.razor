<div class="card">
    <div class="card-body">
        <button class="btn bg-primary-subtle float-end border-0" disabled>
            <i class="@Icon text-primary"></i>
        </button>
        <h6 class="text-muted fw-normal mt-0">@MainText</h6>
        <h3 class="my-3">@MainNumber.ToString("#,#00")</h3>
        <p class="mb-0">
            @if (Percentage < 0)
            {
                <span class="text-danger me-2">
                    <i class="bi bi-arrow-down"></i>
                    @Percentage.ToString("0.#0")%
                </span>
            }
            else
            {
                <span class="text-success me-2">
                    <i class="bi bi-arrow-up"></i>
                    @Percentage.ToString("0.#0")%
                </span>
            }
            <span class="text-nowrap text-muted small">@SmallText</span>
        </p>
    </div>
</div>

@code {
    [Parameter] public int MainNumber { get; set; } 
    [Parameter] public string? MainText { get; set; }
    [Parameter] public string? SmallText { get; set; }
    [Parameter] public decimal Percentage { get; set; } 
    [Parameter] public string? Icon { get; set; }
}
