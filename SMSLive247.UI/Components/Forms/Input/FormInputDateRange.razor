@using System.Linq.Expressions
@inherits InputBase<FormInputDateRangeValue>

<div class="row my-3">
    <label class="form-label col-@Column">@Label</label>
    <div class="col-@(12 - Column) d-flex">
        <div class="input-group">
            <input class="form-control" type="date" 
                   @bind:format="dd-MM-yyyy"
                   @bind="@CurrentValue.StartDate" />
            <input class="form-control" type="date" 
                   @bind:format="dd-MM-yyyy"
                   @bind="@CurrentValue.EndDate" />
        </div>
    </div>
</div>

@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public int? Column { get; set; } = 4;

    protected override bool TryParseValueFromString(string? value,
        [MaybeNullWhen(false)] out FormInputDateRangeValue result,
        [NotNullWhen(false)] out string? validationErrorMessage)
    {
        result = new();// value ?? string.Empty;
        validationErrorMessage = null;
        return true;
    }

}