@using SMSLive247.UI.Pages.Wallet.Modals
@page "/Wallet/Buy"
@attribute [Authorize]

<PageTitle>Buy SMS Credits</PageTitle>

<Card HeaderTitle="Purchase History">
    <Body>
        <SearchArea>
            <LeftRight>
                <Left>
                    <SearchArea>
                        <SearchBox @ref="searchBox">
                            <InputSelect class="form-select" @bind-Value="status">
                                <option value="">PAID</option>
                                <option value="">PENDING</option>
                                <option value="">FAILED</option>
                            </InputSelect>
                        </SearchBox>
                    </SearchArea>
                </Left>
                <Right>
                    <Button Type="Button.Style.DEFAULT" @onclick="e => purchaseModal.Show()">
                        Buy SMS Credit
                    </Button>
                </Right>
            </LeftRight>
        </SearchArea>
        <Table DataSource="ds">
            <Columns>
                <Column Header="Date Created">
                    <FormatDate DateTime="@context.DateCreated"></FormatDate>
                </Column>
                <Column Header="Provider ID">
                    @context.ProviderID
                </Column>
                <Column Header="Reference">
                    @context.Reference
                </Column>
                <Column Header="Quantity">
                    @context.Quantity
                </Column>
                <Column Header="Price">
                    @context.Price
                </Column>
                <Column Header="Amount">
                    @context.Amount
                </Column>
                <Column Header="Status">
                    <span class="badge text-bg-@(context.IsPaid ? "success" : "danger")">
                        @(context.IsPaid ? "Yes" : "No")
                    </span>
                </Column>
            </Columns>
        </Table>
    </Body>
    <Footer>
        <Pager PageState="ds.PageState" OnPageChange="e => ds.SetPage(e).LoadData(alert)" />
    </Footer>
</Card>

<PurchaseModal @ref="purchaseModal"></PurchaseModal>

@code {
    private SearchBox searchBox = new();
    private string status = string.Empty;
    private PurchaseModal purchaseModal = new();
    private ApiDataSource<PurchaseResponse> ds = new();

    protected override async Task OnInitializedAsync()
    {

        ds.Callback = new((PageState p, FilterState? f) =>
        {
            return apiClient.PurchaseListAsync(p.PageNumber, p.PageSize);
        });
        await ds.LoadData(alert);
    }
}
