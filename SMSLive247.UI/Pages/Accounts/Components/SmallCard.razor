<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div>
                <p class="text-muted fw-medium">@Caption</p>
                <h3 class="mb-0">@Value</h3>
            </div>
            <div class="flex-shrink-0 align-self-center">
                <div class="p-3 bg-primary-subtle rounded">
                    <i class="@Icon h2 mb-0 text-primary"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [EditorRequired, Parameter] public string? Caption { get; set; } 
    [EditorRequired, Parameter] public string? Value { get; set; }
    [EditorRequired, Parameter] public string? Icon { get; set; }
}
