@code {
    private Agreement agreementModal = new();
    private PrivacyPolicy privacyModal = new();

    private string? confirmPassword;
    private bool acceptTerms;
    private bool showMore;

    [SupplyParameterFromForm]
    public AccountCreateRequest Model { get; set; } = new() { TimeZone = 1, CountryCode = 234 };

    private void GotoNextView()
    {
        showMore = true;
    }

    private void GotoPreviousView()
    {
        showMore = false;
    }

    private async Task RegisterAsync()
    {
        try
        {
            if (!acceptTerms)
                throw new Exception("You must accept the agreement and privacy policy to register");

            if (Model.Password != confirmPassword)
                throw new Exception("Passwords do not match");


            Model.AccountName = $"{Model.FirstName} {Model.LastName}";
            var response = await apiClient.RegisterAsync("a044b5a7-1147-45cb-871a-76546896c4f3", Model);

            if (response.StatusCode == 200)
                nav.NavigateTo("/Login?email=" + Model.Email);

            throw new Exception("Registration failed");
        }
        catch (SMSLive247.OpenApi.ApiException ex)
        {
            await alert.Error(ex.Message, "Api Error");
        }
        catch (Exception ex)
        {
            await alert.Error(ex.Message, "Error");
        }
    }
